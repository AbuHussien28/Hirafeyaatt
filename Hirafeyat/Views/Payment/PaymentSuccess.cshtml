@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Payment Successful</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            max-width: 450px;
            background: #ffffff;
            padding: 40px 25px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            text-align: center;
            position: relative;
        }

        .success-icon {
            font-size: 50px;
            color: #27ae60;
            background-color: #e6f4ea;
            border-radius: 50%;
            padding: 15px;
            display: inline-block;
            margin-bottom: 15px;
        }

        h2 {
            font-size: 24px;
            color: #2c3e50;
            margin-bottom: 8px;
        }

        p {
            font-size: 15px;
            color: #34495e;
            margin-bottom: 12px;
        }

        .btn {
            display: inline-block;
            margin-top: 15px;
            padding: 12px 18px;
            font-size: 15px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #27ae60;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: #219150;
            }

        .btn-secondary {
            background-color: #27ae60;
            color: #fff;
        }

            .btn-secondary:hover {
                background-color: #219150;
            }

    </style>
</head>
<body>
    <div class="container">
        <div class="success-icon"><i class="fa-solid fa-circle-check"></i></div>
        <h2>Payment Successful!</h2>
        <p>We have received your order.</p>
        <p><strong>Date:</strong> @DateTime.Now.ToString("MMM dd, yyyy @ hh:mm tt")</p>
        <p><strong>Payment Method:</strong> Mastercard Ending in 1887</p>

        <div class="mt-4">
            <a href="@Url.Action("MyOrders", "Order")" class="btn btn-primary">View Your Orders</a>
            <a href="/customer/index" class="btn btn-secondary">Continue Shopping</a>
        </div>

    </div>
</body>
</html>
