@model Hirafeyat.ViewModel.ProductStatusViewModel



@{
    ViewData["Title"] = "Edit Status";
    Layout = "~/Views/AdminProducts/_DefaultLayout.cshtml";
}

<partial name="~/Views/AdminProducts/_TopPartial.cshtml" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Edit Product Status</h4>
                </div>
                <div class="card-body text-center">
                    <img src="@Url.Content("~/" + Model.ImageUrl)" alt="Product Image" class="img-fluid mb-3 rounded" style="max-height: 200px;" />
                    <h5 class="text-primary">@Model.Title</h5>
                    <p class="text-muted mb-4">Current Status: <strong>@Model.Status</strong></p>

                    <form asp-action="EditStatus" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Title" />
                        <input type="hidden" asp-for="ImageUrl" />
                        <div class="form-group mb-3 text-start">
                            <label asp-for="Status" class="form-label">New Status</label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<productStatus>()">
                                <option disabled selected hidden>-- Select Status --</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
                            <button type="submit" class="btn btn-success">Update Status</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
