@model Hirafeyat.Models.Product

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/AdminProducts/_DefaultLayout.cshtml";
}

<partial name="~/Views/AdminProducts/_TopPartial.cshtml" />
<style>

.img-hover-effect img {
	transition: all 0.3s ease;
}
.img-hover-effect img:hover {
	transform: scale(1.05);
	box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
}
</style>


<div class="container-fluid">
	<div class="row justify-content-center px-xl-5 pb-5">
		<!-- Header Section -->
		<div class="container-fluid bg-secondary mb-5">
			<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 100px">
				<h1 class="font-weight-semi-bold text-uppercase mb-3">Product Detail</h1>
				<div class="d-inline-flex">
					<p class="m-0"><a asp-action="Index">Back to List</a></p>
					<p class="m-0 px-2">-</p>
					<p class="m-0">Product Detail</p>
				</div>
			</div>
		</div>

		<!-- Product Detail Section -->
		<!-- Product Image -->
		<div class="col-md-5 mb-4">
			<div class="bg-light p-3 rounded shadow-sm img-hover-effect">
				<img class="img-fluid rounded" src="@Model.ImageUrl" alt="Product Image">
			</div>
		</div>

		<!-- Product Info -->
		<div class="col-md-7">
			<div class="bg-light p-4 rounded shadow-sm">
				<h3 class="text-primary d-flex justify-content-center">@Model.Title</h3>
				<dl class="row">

					<dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Description) </dt>
					<dd class="col-sm-10"> @Html.DisplayFor(model => model.Description) </dd>

					<dt class="col-sm-2">Price</dt>
					<dd class="col-sm-10">@Model.Price.ToString("C")</dd>

					<dt class="col-sm-2">Created At</dt>
					<dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>

					<dt class="col-sm-2">Category</dt>
					<dd class="col-sm-10"> @Html.DisplayFor(model => model.Category.Name) </dd>

					<dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Seller.FullName) </dt>
					<dd class="col-sm-10"> @Html.DisplayFor(model => model.Seller.FullName) </dd>

					<dt class="col-sm-2 " >Status</dt>
					<dd class="col-sm-10">
						@if (Model.Status == productStatus.Approved)
						{
							<span  style="color:green;font-size: 1.5rem;">●</span>
							<span >@Model.Status</span>
						}
						else if (Model.Status == productStatus.Rejected)
						{
							<span style="color:red;font-size: 1.5rem;">●</span>
							<span>@Model.Status</span>
						}
						else
						{
							<span style="color:yellow;  font-size: 1.5rem;">●</span>
							<span >@Model.Status</span>
						}
					</dd>


				</dl>

				<div class="mt-4 d-flex justify-content-end gap-2">
					<a asp-action="Index" class="btn btn-outline-primary">Back</a>

					<form asp-action="EditStatus" asp-route-id="@Model.Id" method="get" class="d-inline">
						<button type="submit" class="btn btn-primary">Edit</button>
					</form>

				</div>
			</div>
		</div>
	</div>
</div>
