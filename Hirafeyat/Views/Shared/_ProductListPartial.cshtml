@model List<Hirafeyat.Models.Product>

<div class="container">
    <div class="row justify-content-center">
        @foreach (var pro in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">

                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="img-fluid w-100 fixed-image" src="@pro.ImageUrl" alt="@pro.Title">

                        <!-- زر الفيفورت بشكل مضبوط -->
                        <form method="post" asp-action="AddToFavourites" asp-controller="Favourite" class="position-absolute" style="top: 10px; right: 10px;">
                            <input type="hidden" name="productId" value="@pro.Id" />
                            <a asp-action="login" asp-controller="account" type="submit" class="btn btn-sm text-danger bg-white rounded-circle shadow-sm p-1" title="Add to Favourites">
                                ❤️
                            </a>
                        </form>
                    </div>

                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@pro.Category.Name</h6>
                        <div class="d-flex justify-content-center">
                            <h6>$@(@pro.Price - 200)</h6>
                            <h6 class="text-muted ml-2"><del>$@pro.Price</del></h6>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a href="#" class="btn btn-sm text-dark p-0">
                            <i class="fas fa-eye text-primary mr-1"></i>View Detail
                        </a>
                        <a href="#" class="btn btn-sm text-dark p-0">
                            <i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
