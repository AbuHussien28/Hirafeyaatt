@model IEnumerable<Hirafeyat.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Address</th>
            <th>Update Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@item.Status</td>
                <td>@item.Address</td>
                <td>
                    @if (item.Status == OrderStatus.Cancelled || item.Status == OrderStatus.Delivered)
                    {
                        <form asp-action="RemoveOrder" method="post" asp-route-orderId="@item.Id" onsubmit="return confirm('Are you sure you want to remove this order?');">
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="UpdateOrderStatus" method="post" asp-route-orderId="@item.Id">
                            <select name="newStatus" class="form-control">
                                @foreach (var status in Enum.GetValues(typeof(Hirafeyat.Models.OrderStatus)))
                                {
                                    <option value="@status" selected="@(item.Status == (OrderStatus)status ? "selected" : null)">
                                        @status
                                    </option>
                                }
                            </select>
                            <button type="submit" class="btn btn-primary btn-sm">Save</button>
                        </form>
                    }
                </td>

                <td>
                    <a asp-action="OrderDetail" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
