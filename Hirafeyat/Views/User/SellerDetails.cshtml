@model Hirafeyat.ViewModel.Admin.UserSellerAdminViewModel

@{
	ViewData["Title"] = "Seller Details";
	Layout = "~/Views/AdminProducts/_DefaultLayout.cshtml";
}

<partial name="~/Views/AdminProducts/_TopPartial.cshtml" />

<div class="container mt-4">
	<div class="card shadow-lg border-0" style="border-radius: 20px;">
		<div class="row g-0">
			<div class="col-md-4 d-flex align-items-center justify-content-center bg-light p-4">
				@if (!string.IsNullOrEmpty(Model.ProfileImage))
				{
					<img src="@Url.Content("~/" + Model.ProfileImage)"
						 class="img-fluid rounded-circle shadow"
						 alt="Profile Image"
						 style="width: 220px; height: 220px; object-fit: cover;" />
				}
				else
				{
					<div class="text-center">
						<i class="bi bi-person-circle" style="font-size: 7rem; color: #adb5bd;"></i>
						<p class="mt-3 text-muted">No profile image available</p>
					</div>
				}
			</div>

			<div class="col-md-8">
				<div class="card-body p-4">
					<div class="d-flex justify-content-between align-items-center mb-4">
						<h3 class="mb-0"><strong>@Model.FullName</strong></h3>
						<span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") fs-6 px-3 py-2 rounded-pill text-white">
							@(Model.IsActive ? "Active" : "Inactive")
						</span>
					</div>

					<hr />

					<div class="row">
						<div class="col-md-6 mb-3">
							<h6 class="text-primary fw-bold">User Name</h6>
							<p class="lead">@Model.UserName</p>
						</div>
						<div class="col-md-6 mb-3">
							<h6 class="text-primary fw-bold">Email</h6>
							<p class="lead">@Model.Email</p>
						</div>
					</div>

					<div class="row">
						<div class="col-md-6 mb-3">
							<h6 class="text-primary fw-bold">Address</h6>
							<p class="lead">@Model.Address</p>
						</div>
						<div class="col-md-6 mb-3">
							<h6 class="text-primary fw-bold">Phone Number</h6>
							<p class="lead">@Model.PhoneNumber</p>
						</div>
					</div>

					<div class="mb-3">
						<h6 class="text-primary fw-bold">Account Created Date</h6>
						<p class="lead">@Model.AccountCreatedDate?.ToString("yyyy-MM-dd")</p>
					</div>

					<hr />

					<div class="d-flex justify-content-between">
						<a href="/User/Sellers" class="btn btn-outline-primary">
							Back to List <i class="bi bi-arrow-left ms-2"></i>
						</a>

						<form asp-action="ToggleUserStatus" method="post">
							<input type="hidden" name="userName" value="@Model.UserName" />
							<button type="submit" class="btn @(Model.IsActive ? "btn-danger" : "btn-success")">
								<i class="bi @(Model.IsActive ? "bi-x-circle" : "bi-check-circle") me-2"></i>
								@(Model.IsActive ? "Deactivate" : "Activate")
							</button>
						</form>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
