            <script>
                               document.getElementById("filterForm").addEventListener("change", function() {
                    var selectedPrices = [];
                    document.querySelectorAll("input[name='SelectedPrices']:checked").forEach(function(checkbox) {
                        selectedPrices.push(checkbox.value);
                    });

                    $.ajax({
                        url: '/Home/FilterProducts',
                        type: 'POST',
                        data: { SelectedPrices: selectedPrices },
                        success: function (response) {
                            updateProductList(response);
                        },
                        error: function () {
                            alert("Error while filtering products.");
                        }
                    });
                });

                // إضافة البحث
                document.getElementById("searchInput").addEventListener("input", function() {
                    var searchQuery = document.getElementById("searchInput").value;

                    if (searchQuery.length > 0) {
                        $.ajax({
                            url: '/Home/SearchProducts',  // تأكد من أن هذا هو المسار الصحيح
                            type: 'GET',
                            data: { query: searchQuery },
                            success: function(response) {
                                updateProductList(response);
                            },
                            error: function() {
                                alert("Error while searching products.");
                            }
                        });
                    } else {
                        // عند مسح النص، إعادة عرض جميع المنتجات
                        $.ajax({
                            url: '/Home/GetAllProducts',  // إعادة جلب جميع المنتجات
                            type: 'GET',
                            success: function(response) {
                                updateProductList(response);
                            },
                            error: function() {
                                alert("Error while loading products.");
                            }
                        });
                    }
                });

                function updateProductList(products) {
                    var productList = document.getElementById("productList");
                    productList.innerHTML = '';  // مسح المنتجات الحالية

                    // إضافة تنسيق Flex مباشرة للحاوية
                    productList.style.display = 'flex';
                    productList.style.flexWrap = 'wrap';
                    productList.style.justifyContent = 'evenly';

                    products.forEach(function(product) {
                        var productCard = `
                            <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                                <div class="card product-item border-0 mb-4">
                                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                        <img class="img-fluid w-100 fixed-image" src="${product.imageUrl}" alt="${product.title}">

                                        <!-- زر الفيفورت بشكل مضبوط -->
                                      <form method="post" asp-action="AddToFavourites" asp-controller="Favourite" class="position-absolute" style="top: 10px; right: 10px;">
                                                        <input type="hidden" name="productId" value="{product.Id}" />
                                                        <button type="submit" class="btn btn-sm text-danger bg-white rounded-circle shadow-sm p-1" title="Add to Favourites">
                                                            ❤️
                                                        </button>
                                                    </form>
                                    </div>

                                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                        <h6 class="text-truncate mb-3">${product.title}</h6>
                                        <div class="d-flex justify-content-center">
                                            <h6>$${product.price - 200}</h6>
                                            <h6 class="text-muted ml-2"><del>$${product.price}</del></h6>
                                        </div>
                                    </div>

                                    <div class="card-footer d-flex justify-content-between bg-light border">
                                        <a href="/home/details/${product.id}" class="btn btn-sm text-dark p-0">
                                            <i class="fas fa-eye text-primary mr-1"></i>View Detail
                                        </a>
                                        <a href="/account/login" class="btn btn-sm text-dark p-0">
                                            <i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart
                                        </a>
                                    </div>
                                </div>
                            </div>
                        `;
                        productList.innerHTML += productCard;
                    });
                }

            </script>






